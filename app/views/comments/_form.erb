<div class="add_comment">

    <%= form_for([@post, @post.comments.build]) do |f| %>

      <h2>Add a comment:</h2>
      <div class="field">
         <%= f.label :commenter %><br />
         <%= f.text_field :commenter %>
      </div>
      <div class="">
         <%= f.label :body %>
         <br />
         <%= f.text_area :body, :placeholder => "Comment can't be blank" %>
       </div>
      <div class="actions"> <%= f.submit %> </div>
    <% end %>

</div>