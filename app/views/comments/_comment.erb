<div class="comments">
<% @post.comments.each do |comment| %>
    <div class="comment">
    <p> <b>Commenter:</b> <%= comment.commenter %> </p>
    <p> <b>Comment:</b> <%= comment.body %> </p>
    <% if current_user %>
          <%= button_to "delete", [comment.post, comment], :method=>:delete, :class=>:destroy,:onclick => "return confirm('Are you sure?')"  %>

        <% end %>
    </div>
<% end %>
 </div>