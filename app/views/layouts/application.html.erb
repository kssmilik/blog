<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div class="regestry">
  <div id="user_nav">
  <% if current_user %>
     <%= current_user.email %>.
   <b> <%= link_to "Sign out", log_out_path %> </b>
  <% else %>
    <%= link_to "Sign in", log_in_path %>
  <% end %>
</div>
</div>

  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash#{name}" %>
  <% end %>

<%= yield %>

</body>
</html>
